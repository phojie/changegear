{
  "name": "changegear",
  "version": "1.1.0",
  "description": "Generate Beautiful Changelogs using Conventional Commits",
  "repository": "phojie/changegear",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "changegear": "./dist/cli.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "changegear": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "npx simple-git-hooks",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm changegear --release --push && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "c12": "^2.0.1",
    "colorette": "^2.0.20",
    "consola": "^3.2.3",
    "convert-gitmoji": "^0.1.5",
    "mri": "^1.2.0",
    "node-fetch-native": "^1.6.4",
    "ofetch": "^1.4.1",
    "open": "^10.1.0",
    "pathe": "^1.1.2",
    "pkg-types": "^1.2.1",
    "scule": "^1.3.0",
    "semver": "^7.6.3",
    "std-env": "^3.7.0",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.6",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.14.0",
    "eslint-config-unjs": "^0.4.1",
    "jiti": "^2.4.0",
    "prettier": "^3.3.3",
    "@antfu/eslint-config": "^2.1.0",
    "lint-staged": "^15.1.0",
    "simple-git-hooks": "^2.9.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.4"
  },
  "packageManager": "pnpm@8.10.5",
  "publishConfig": {
    "access": "public"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
